<!DOCTYPE html>
<html lang="en">
<% include partials/head.ejs %>
<body>
  <div data-role="page" id="index">
    <header data-role="header">
       <h1>Index</h1>
    </header>
    <div role="main" class="ui-content">
      <nav>
        <a href="/index">Index</a>
        <a href="/home">Home</a>
        <a href="/playlist">Playlist</a>
        <a href="/search">Search</a>
      </nav>

      <div class="ui-grid-a">
        <div class="ui-block-a form-container">
          <h2>Login</h2>
          <form method="post" action="/login">
            <div class="ui-field-contain">
                <label for="login-username">Username</label>
                <input type="text" name="username" id="login-username"value="">
            </div>
            <div class="ui-field-contain">
                <label for="login-password">Password</label>
                <input type="password" name="password" id="login-password" autocomplete="off">
            </div>
            <input type="submit" class="ui-btn" data-mini="true" value="Submit">
          </form>
        </div>
        <div class="ui-block-b form-container">
          <h2>Sign Up</h2>
          <form method="post" action="/signup">
            <div class="ui-field-contain">
                <label for="signup-email">Email</label>
                <input type="text" name="email" id="signup-email"value="">
            </div>
            <div class="ui-field-contain">
                <label for="signup-username">Username</label>
                <input type="text" name="username" id="signup-username"value="">
            </div>
            <div class="ui-field-contain">
                <label for="signup-password">Password</label>
                <input type="password" name="password" id="signup-password" autocomplete="off">
            </div>
            <input type="submit" class="ui-btn" data-mini="true" value="Submit">
          </form>
        </div>
      </div>
      <div class="bg-img"></div>
    </div>
  </div>
  <% include partials/limited-scripts.ejs %>
</body>
</html>